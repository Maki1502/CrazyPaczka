<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ib.StatsController">
   <children>
      <VBox alignment="CENTER" layoutX="-1.0" layoutY="-1.0" prefHeight="400.0" prefWidth="188.0">
         <children>
            <Button fx:id="btnDailyProfit" mnemonicParsing="false" onAction="#onBtnDailyProfit" text="Daily profit">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnDailyShip" mnemonicParsing="false" onAction="#onBtnDailyShip" text="Daily shipments">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnProfit" mnemonicParsing="false" onAction="#onBtnProfit" text="Profit">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnShip" mnemonicParsing="false" onAction="#onBtnShip" text="Shipments">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnS" mnemonicParsing="false" onAction="#onBtnS" text="S %">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnM" mnemonicParsing="false" onAction="#onBtnM" text="M %">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnL" mnemonicParsing="false" onAction="#onBtnL" text="L %">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="187.0" prefHeight="400.0" prefWidth="211.0">
         <children>
            <TextArea fx:id="textArea" prefHeight="118.0" prefWidth="153.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </TextArea>
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#onBtnExit" text="Exit" />
         </children>
      </VBox>
   </children>
</AnchorPane>
